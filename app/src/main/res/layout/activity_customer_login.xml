<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".CustomerLoginActivity">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="255dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/krish" />

    <EditText
        android:id="@+id/etLoginUsername"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:hint="Enter User Name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="#FDFCFD"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/etloginpassword"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:hint="Enter Password"
        android:textColor="@color/white"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textSize="20dp"
        android:textColorHint="#FDF9F9" />


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/almendra_sc"
        android:text="Login"
        android:textColor="@color/tomato"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="255dp"
        android:layout_height="31dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:hint="Not_Having_Account"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textColorHint="#FDF9F9" />

    <Button
        android:id="@+id/btnLoginRegister"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/almendra_sc"
        android:text="Register"
        android:textColor="@color/tomato"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:text="Developed by eSparse Matrix Solution Pvt Ltd"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:textStyle="italic|bold" />



</LinearLayout>